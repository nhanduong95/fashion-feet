@model ClientSide.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<section class="banner-container" style="background-image: url(/Images/register.jpg);">
    <div class="banner-02">
        <div class="row">
            <div class="col-lg-12">
                <div class="register-intro-text col-lg-4">
                    <span class="register-title">@ViewBag.Title</span><br />
                    <span class="shop-name">FASHION FEET</span>
                </div>
            </div>
        </div>
    </div>
</section>
<section style="padding-top: 50px;">
    <div class="row">
        <div class="col-lg-offset-3 col-lg-6">
            <div class="well bs-component">
                <fieldset>
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })<br />
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-6 col-md-2">
                                <input type="submit" class="btn btn-danger" value="Register" />
                            </div>
                        </div>
                    }
                </fieldset>
            </div>
            
        </div>
    </div>
    
</section>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Styles.Render("~/Content/min.css")
    @Styles.Render("~/Content/css")
}
