@{
    ViewBag.Title = "Cart Invalid Input Error";
}
<div class="container error-container">
    <div class="col-lg-offset-3">
        <h2 class="text-danger"><i class="fa fa-exclamation-triangle"></i> INVALID INPUT ERROR</h2>
        <h3 class="text-danger">Please check your input size and quantity again.</h3>
        <div class="alert alert-danger col-lg-5 col-lg-offset-1">
            <ul>
                <li>Input size must be from 36 to 39.</li>
                <li>Input quantity must be at least 1.</li>
            </ul>
        </div>
    </div>
</div>


